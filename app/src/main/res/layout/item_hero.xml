<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItem"
    android:layout_margin="@dimen/dimen_dp_2"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:ignore="RtlHardcoded">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen_dp_8">

        <TextView
            android:id="@+id/lblNumberChar"
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_sp_16"
            android:textStyle="bold"
            android:maxLines="2"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_dp_12"
            android:layout_marginTop="@dimen/dimen_dp_20"
            android:layout_marginStart="@dimen/dimen_dp_24"
            android:layout_marginEnd="@dimen/dimen_dp_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imgItem"
            android:contentDescription="@string/app_name"
            android:layout_width="@dimen/dimen_dp_70"
            android:layout_height="@dimen/dimen_dp_70"
            android:layout_marginTop="@dimen/dimen_dp_16"
            android:layout_marginStart="@dimen/dimen_dp_4"
            android:layout_marginLeft="@dimen/dimen_dp_4"
            android:layout_marginBottom="@dimen/dimen_dp_16"
            app:srcCompat="@drawable/ic_launcher_background"
            app:layout_constraintTop_toBottomOf="@+id/lblNumberChar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/lblName"
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_sp_16"
            android:textStyle="bold"
            android:maxLines="2"
            android:layout_margin="@dimen/dimen_dp_12"
            android:layout_marginTop="@dimen/dimen_dp_20"
            app:layout_constraintTop_toBottomOf="@+id/lblNumberChar"
            app:layout_constraintStart_toEndOf="@+id/imgItem"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/lblDescription"
            android:layout_width="@dimen/dimen_zero"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_dp_12"
            android:layout_marginTop="@dimen/dimen_dp_6"
            android:textSize="@dimen/dimen_sp_14"
            app:layout_constraintTop_toBottomOf="@+id/lblName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgItem"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>